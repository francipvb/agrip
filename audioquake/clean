#!/bin/bash
echo "AudioQuake Repository Cleanup Script"
echo " $0 [all] -- clean all files and code"
echo " $0 files -- clean files only"

echo Generated files...
rm -rf id1 AudioQuake.app

echo Support files...
rm maps/*bsp
rm -rf skins demos

echo Shareware and mindgrid data files...
rm -rf quake-shareware-1.06 mindgrid-audio_quake_2003.09.22

if [ "$1" == "all" ] || [ "$1" != "files" ]; then
	echo Engine...
	cd zq-repo
	./agrip-cleanup
fi

echo Cleanup complete!
